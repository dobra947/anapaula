---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Gallery from '../components/Gallery.astro';
import PencilDivider from '../components/PencilDivider.astro';

// Importar las obras para mostrar las destacadas
const allObras = await Astro.glob('../content/obras/*.md');
const obrasData = allObras.map(obra => ({
  slug: obra.frontmatter.slug,
  title: obra.frontmatter.title,
  image: obra.frontmatter.image,
  alt: obra.frontmatter.alt,
  technique: obra.frontmatter.technique,
  date: obra.frontmatter.date,
  summary: obra.frontmatter.summary,
  featured: obra.frontmatter.featured
}));

const obrasFeatured = obrasData.filter(obra => obra.featured);

// JSON-LD para la página principal
const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Person",
      "@id": "https://anapaulabarahona.com/#person",
      "name": "Ana Paula Barahona",
      "description": "Artista multidisciplinar, escultura, pintura y dibujo.",
      "image": "https://anapaulabarahona.com/images/anapaula_barahona.jpg",
      "url": "https://anapaulabarahona.com",
      "sameAs": [
        "https://instagram.com/anapaula_barahona",
        "https://youtube.com/@anapaula_barahona"
      ]
    },
    {
      "@type": "WebSite",
      "@id": "https://anapaulabarahona.com/#website",
      "url": "https://anapaulabarahona.com",
      "name": "Ana Paula Barahona - Portfolio",
      "description": "Portfolio de obras de arte de Ana Paula Barahona",
      "publisher": {
        "@id": "https://anapaulabarahona.com/#person"
      }
    }
  ]
};
---

<BaseLayout
  title="Ana Paula Barahona - Artista Visual"
  description="Portfolio de Ana Paula Barahona, artista especializada en dibujo a lápiz, grafito y técnicas tradicionales. Explora mi obra y proceso creativo."
  jsonLd={jsonLd}
>
  <Hero
    name="Ana Paula Barahona"
    claim="Creativa multidisciplinar y dueña de mi propio 'yoverso'"
    ctaText="Ver obras"
    ctaUrl="/obras"
  />


  <Gallery obras={obrasFeatured} featured={true} />


  <section class="about-preview" aria-labelledby="about-title">
    <div class="about-content">
      <div class="about-text">
        <h2 id="about-title">¡Mi mundo creativo!</h2>
        <p>
          ¡Bienvenidos a mi universo! Aquí mezclo, juego y experimento con técnicas e histirias de toda índole.
          </p>
        <p>
          Me encanta jugar con plumillas, mancharme los dedos con arcillas, carboncillo y acrílicos. Son mis cómplices perfectos para recrear mundos o crearlos de cero.
        </p>
        <a href="/sobre" class="about-link">Si quieres te explico más a fondo aquí</a>
      </div>
      <div class="about-visual" aria-hidden="true">
        <div class="sketch-portrait">
          <div class="portrait-line portrait-line-1"></div>
          <div class="portrait-line portrait-line-2"></div>
          <div class="portrait-line portrait-line-3"></div>
          <div class="portrait-line portrait-line-4"></div>
          <div class="portrait-line portrait-line-5"></div>
        </div>
      </div>
    </div>
  </section>

  <PencilDivider variant="line" />

  <section class="contact-preview" aria-labelledby="contact-title">
    <div class="contact-content">
      <h2 id="contact-title">¿Quieres ver más?</h2>
      <p>¡No te pierdas mis últimas locuras! Makings of, detallitos y otras cosillas que no están por aquí.</p>
      <div class="contact-actions">
        <a href="/contacto" class="contact-button">¡Conéctate conmigo!</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .about-preview {
    margin: var(--space-10) 0;
  }

  .about-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-8);
    align-items: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .about-text h2 {
    font-family: var(--font-family-display);
    font-size: 2rem;
    margin: 0 0 var(--space-4) 0;
    position: relative;
  }

  .about-text h2::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 1px;
    background: var(--color-black);
  }

  .about-text p {
    margin: 0 0 var(--space-3) 0;
    line-height: 1.6;
    color: var(--color-gray);
  }

  .about-link {
    display: inline-block;
    margin-top: var(--space-2);
    color: var(--color-black);
    text-decoration: none;
    font-weight: 100;
    border-bottom: 2px solid transparent;
    transition: var(--transition);
  }

  .about-link:hover {
    border-bottom-color: var(--color-black);
  }

  .about-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .sketch-portrait {
    width: 200px;
    height: 250px;
    position: relative;
    opacity: 0.6;
  }

  .portrait-line {
    position: absolute;
    background: var(--color-black);
    border-radius: 1px;
  }

  .portrait-line-1 {
    width: 80px;
    height: 1px;
    top: 20%;
    left: 20%;
    transform: rotate(-5deg);
  }

  .portrait-line-2 {
    width: 60px;
    height: 1px;
    top: 35%;
    left: 30%;
    transform: rotate(8deg);
  }

  .portrait-line-3 {
    width: 90px;
    height: 1px;
    top: 50%;
    left: 15%;
    transform: rotate(-3deg);
  }

  .portrait-line-4 {
    width: 70px;
    height: 1px;
    top: 65%;
    left: 25%;
    transform: rotate(6deg);
  }

  .portrait-line-5 {
    width: 50px;
    height: 1px;
    top: 80%;
    left: 35%;
    transform: rotate(-8deg);
  }

  .contact-preview {
    background: var(--color-gray-light);
    padding: var(--space-8) var(--space-3);
    text-align: center;
    margin: var(--space-10) 0;
  }

  .contact-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-content h2 {
    font-family: var(--font-family-display);
    font-size: 2rem;
    margin: 0 0 var(--space-3) 0;
  }

  .contact-content p {
    font-size: 1.1rem;
    color: var(--color-gray);
    margin: 0 0 var(--space-4) 0;
  }

  .contact-actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
  }

  .contact-button {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    background: var(--color-black);
    color: var(--color-white);
    text-decoration: none;
    border-radius: var(--border-radius);
    transition: var(--transition);
    font-weight: 100;
  }

  .contact-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
  }

  .contact-link {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    color: var(--color-black);
    text-decoration: none;
    border: 1px solid var(--color-black);
    border-radius: var(--border-radius);
    transition: var(--transition);
    font-weight: 100;
  }

  .contact-link:hover {
    background: var(--color-black);
    color: var(--color-white);
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: var(--space-6);
      text-align: center;
    }

    .about-text h2::after {
      left: 50%;
      transform: translateX(-50%);
    }

    .contact-actions {
      flex-direction: column;
      align-items: center;
    }

    .contact-button,
    .contact-link {
      width: 200px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .contact-button:hover {
      transform: none;
    }
  }
</style>