    padding: 0;
    margin: 0;
    display: flex;
    gap: var(--space-1);
    font-size: 0.9rem;
  }

  .breadcrumb li::after {
    content: ' / ';
    color: var(--color-gray);
    margin-left: var(--space-1);
  }

  .breadcrumb li:last-child::after {
    display: none;
  }

  .breadcrumb a {
    color: var(--color-black);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb li[aria-current="page"] {
