  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .page-header h1 {
    font-family: var(--font-family-display);
    font-size: 3rem;
    margin: 0 0 var(--space-2) 0;
    position: relative;
  }

  .page-header h1::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 1px;
    background: var(--color-black);
  }

  .page-subtitle {
    font-size: 1.2rem;
    color: var(--color-gray);
    font-style: italic;
    margin: 0;
  }

  .contact-intro {
    max-width: 700px;
    margin: 0 auto var(--space-8) auto;
    text-align: center;
  }

  .intro-content h2 {
    font-family: var(--font-family-display);
    font-size: 1.8rem;
    margin: 0 0 var(--space-3) 0;
  }

  .intro-content p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--color-gray);
    margin: 0;
  }

  .contact-methods h2,
  .message-section h2 {
    font-family: var(--font-family-display);
    font-size: 2rem;
    text-align: center;
    margin: 0 0 var(--space-6) 0;
    position: relative;
  }

  .contact-methods h2::after,
  .message-section h2::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 1px;
    background: var(--color-black);
  }

  .methods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-10);
  }

  .contact-card {
    background: var(--color-white);
    border: 1px solid #e0e0e0;
    border-radius: var(--border-radius);
    padding: var(--space-5);
    text-align: center;
    transition: var(--transition);
  }

  .contact-card:hover {
